<h1 class ="text-center m-5 custom-title">Créer un compte</h1>

<div class = "card custom-card-bg text-white m-5 p-5">
  <%= form_with model: @user, local: true do |f| %>
    <div>
      <%= f.label :first_name, "Prénom", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div>
      <%= f.label :last_name, "Nom", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div>
      <%= f.label :email, "Adresse email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div>
      <%= f.label :password, "Mot de passe", class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirmez votre mot de passe", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div>
      <%= f.label :age, "Age", class: "form-label" %>
      <%= f.number_field :age, class: "form-control" %>
    </div>

    <div>
      <%= f.label :city, "Ville", class: "form-label" %>
      <%= f.collection_select :city_id, City.all, :id, :name, { prompt: "Choisir une ville" }, { class: "form-select" } %>
    </div>

    <div>
      <%= f.label :description, "Description", class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div>
      <%= f.submit "S'inscrire", class: "mt-2 btn btn-light" %>
    </div>
  <% end %>
</div>