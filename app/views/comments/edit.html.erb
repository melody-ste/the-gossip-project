<h1 class="text-center m-5 custom-title">Modification du commentaire</h1>

<div class="card custom-card-bg text-white p-5">
  <%= form_with model: @comment, local: true do |form| %>
    <div class="form-group">
      <%= form.label :content, "Contenu" %>
      <%= form.text_field :content, class: "form-control" %>
      <br>
    </div>

    <%= form.submit "Sauvegarder", class: "btn btn-light mt-2" %>
  <% end %>
</div>


